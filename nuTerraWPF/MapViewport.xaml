<UserControl x:Class="MapViewport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <glWpfControl:GLWpfControl
            Visibility="Hidden"
            x:Name="OpenTkControl"
            Render="OpenTkControl_OnRender" />
        <Image Stretch="UniformToFill" Source="Resources/earth.png"/>
        <Image Height="20" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Left" Source="Resources/progress_bar.png" Margin="0,10,0,0" />
        <TextBlock Text="Loading..." Margin="10,35,0,0" Foreground="White" FontSize="14" />
        <TextBlock x:Name="Description" TextWrapping="Wrap" Margin="10,60,0,0" Foreground="Yellow" FontSize="14" />
    </Grid>
</UserControl>
