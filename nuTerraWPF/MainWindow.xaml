<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="nuTerra"
        MinHeight="700" MinWidth="940"
        Height="720" Width="1020"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Load Map" />
                <MenuItem Header="Developer Mode" />
                <MenuItem Header="Log File" />
                <MenuItem Header="Shut Me Down" Click="Close" />
            </MenuItem>
            <MenuItem Header="Settings" />
            <MenuItem Header="Light Settings" />
            <MenuItem Header="Developer Tools" />
            <MenuItem Header="Screen Capture" />
        </Menu>
        <ContentControl Grid.Row="1" x:Name="ContentArea" />
    </Grid>
</Window>
